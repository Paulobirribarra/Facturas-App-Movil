<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header de la factura -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textTipoDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FACTURA ELECTRÓNICA"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/textFolioDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Folio: 12345"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#666"
                    android:gravity="center" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Información del cliente -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Información del Cliente"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textClienteDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Razón Social del Cliente"
                    android:textSize="14sp"
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/textRutDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="RUT: 12.345.678-9"
                    android:textSize="12sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/textContactoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Contacto: Nombre del Contacto"
                    android:textSize="12sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/textContactoCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Email: contacto@empresa.com"
                    android:textSize="12sp"
                    android:textColor="#666" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Fechas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fechas"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textFechaEmision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha Emisión: 01/10/2025"
                    android:textSize="14sp"
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/textFechaRecepcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Fecha Recepción: 01/10/2025"
                    android:textSize="14sp"
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/textFechaVencimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Fecha Vencimiento: 31/10/2025"
                    android:textSize="14sp"
                    android:textColor="#333" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Montos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Montos"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Monto Neto:"
                        android:textSize="14sp"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/textMontoNeto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$123.456"
                        android:textSize="14sp"
                        android:textColor="#333" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="IVA:"
                        android:textSize="14sp"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/textMontoIva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$23.456"
                        android:textSize="14sp"
                        android:textColor="#333" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TOTAL:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                    <TextView
                        android:id="@+id/textMontoTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$146.912"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Estado de pago -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado y Pago"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textEstadoDetalle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado: Pendiente"
                    android:textSize="14sp"
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/textMetodoPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Método de Pago: No especificado"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/textFechaPago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Fecha de Pago: No pagada"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/textNumeroOperacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Número Operación: No especificado"
                    android:textSize="14sp"
                    android:textColor="#666" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Comentarios -->
        <TextView
            android:id="@+id/textComentarioLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comentarios"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardComentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textComentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comentario de la factura"
                    android:textSize="14sp"
                    android:textColor="#333" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBarDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Botón de volver -->
        <Button
            android:id="@+id/buttonVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:background="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
