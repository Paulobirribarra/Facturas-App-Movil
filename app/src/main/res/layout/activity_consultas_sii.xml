<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultas SII"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blue_primary"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Tipo de Consulta -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo de Consulta:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerTipoConsulta"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:entries="@array/tipos_consulta_sii" />

    <!-- Mes -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mes:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <NumberPicker
        android:id="@+id/npMes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp" />

    <!-- Año -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Año:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <NumberPicker
        android:id="@+id/npAnio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp" />

    <!-- Botón Consultar -->
    <Button
        android:id="@+id/btnConsultar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Consultar SII"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/button_login_style"
        android:textColor="@color/white" />

</LinearLayout>
