<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con información del usuario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textWelcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333" />

                <TextView
                    android:id="@+id/textUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Información del usuario"
                    android:textSize="14sp"
                    android:textColor="#666" />

                <TextView
                    android:id="@+id/textEmpresaActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Empresa actual"
                    android:textSize="12sp"
                    android:textColor="#999" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonTodasFacturas"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Todas las Facturas"
                android:textSize="14sp"
                android:background="@drawable/button_login_style"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/buttonFacturasPagadas"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Facturas Pagadas"
                android:textSize="14sp"
                android:background="@drawable/button_login_style"
                android:textColor="@color/white" />

        </LinearLayout>

        <!-- Botón de Consultas SII -->
        <Button
            android:id="@+id/buttonConsultaSII"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="Consultas SII"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_login_style"
            android:textColor="@color/white" />

        <!-- RecyclerView para facturas -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFacturas"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false" />

        <!-- Paginación -->
        <LinearLayout
            android:id="@+id/layoutPaginacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone">

            <Button
                android:id="@+id/buttonAnterior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anterior"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/textPaginaActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Página 1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonSiguiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siguiente"
                android:layout_marginStart="16dp" />

        </LinearLayout>

        <!-- Botón de Cerrar Sesión -->
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Cerrar Sesión"
            android:textSize="16sp"
            android:background="@android:color/darker_gray"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>
